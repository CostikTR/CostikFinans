rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Development mode - daha gevşek kurallar
    match /users/{userId} {
      // Herkes kendi verilerini okuyabilir/yazabilir
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Giriş yapmış herkes diğer kullanıcıları okuyabilir (admin panel için)
      allow read: if request.auth != null;
      
      // Sadece kendi verilerini yazabilir
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // İşlemler - basit kurallar
    match /transactions/{transactionId} {
      // Kendi işlemlerini okuyabilir/yazabilir
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      // Yeni işlem oluştururken userId zorunlu
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Diğer collection'lar için basit kurallar
    match /{document=**} {
      // Giriş yapmış kullanıcılar okuyabilir
      allow read: if request.auth != null;
      // Sadece kendi userId'li verileri yazabilir
      allow write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || request.resource.data.userId == request.auth.uid);
    }
  }
}
